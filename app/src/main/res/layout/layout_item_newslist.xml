<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_news"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_ltitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_news"
        android:layout_toEndOf="@+id/img_news"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_ptime"
        android:layout_below="@+id/tv_ltitle"
        android:layout_alignLeft="@+id/tv_ltitle"
        android:layout_alignStart="@+id/tv_ltitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_replyCount"
        android:layout_below="@+id/tv_ptime"
        android:layout_alignLeft="@+id/tv_ptime"
        android:layout_alignStart="@+id/tv_ptime"/>

</RelativeLayout>